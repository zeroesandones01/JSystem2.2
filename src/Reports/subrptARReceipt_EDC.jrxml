<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="subrptARReceipt" pageWidth="503" pageHeight="792" columnWidth="503" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
	<property name="ireport.zoom" value="2.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<parameter name="client_seqno" class="java.lang.String"/>
	<parameter name="ar_no" class="java.lang.String"/>
	<queryString>
		<![CDATA[SELECT b.partdesc, SUM(a.amount) as amount
FROM rf_tra_detail a
LEFT JOIN mf_pay_particular b ON b.pay_part_id = a.part_id
WHERE client_seqno = $P{client_seqno} AND receipt_no = $P{ar_no}
GROUP BY b.partdesc

UNION ALL

SELECT b.partdesc, SUM(a.amount) as amount
FROM rf_pay_detail a
LEFT JOIN mf_pay_particular b ON b.pay_part_id = a.part_type
WHERE client_seqno = $P{client_seqno}
AND (receipt_no = $P{ar_no} or ar_no = $P{ar_no})
GROUP BY b.partdesc;]]>
	</queryString>
	<field name="partdesc" class="java.lang.String"/>
	<field name="amount" class="java.math.BigDecimal"/>
	<detail>
		<band height="30" splitType="Stretch">
			<textField>
				<reportElement x="0" y="0" width="73" height="30"/>
				<textElement textAlignment="Right" verticalAlignment="Middle">
					<font fontName="Times New Roman" size="9"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{partdesc}]]></textFieldExpression>
			</textField>
			<textField pattern="#,##0.00">
				<reportElement x="73" y="0" width="74" height="30"/>
				<textElement textAlignment="Right" verticalAlignment="Middle">
					<font fontName="Times New Roman" size="9"/>
				</textElement>
				<textFieldExpression class="java.math.BigDecimal"><![CDATA[$F{amount}]]></textFieldExpression>
			</textField>
		</band>
	</detail>
</jasperReport>
