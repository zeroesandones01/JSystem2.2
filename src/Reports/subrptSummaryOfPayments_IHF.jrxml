<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="subrptSummaryOfPayments_IHF" pageWidth="250" pageHeight="792" columnWidth="220" leftMargin="15" rightMargin="15" topMargin="5" bottomMargin="5">
	<property name="ireport.zoom" value="3.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<parameter name="entity_id" class="java.lang.String" isForPrompting="false"/>
	<parameter name="proj_id" class="java.lang.String" isForPrompting="false"/>
	<parameter name="pbl_id" class="java.lang.String" isForPrompting="false"/>
	<parameter name="seq_no" class="java.lang.Integer" isForPrompting="false"/>
	<queryString>
		<![CDATA[SELECT * FROM sp_sop_ihf($P{entity_id}, $P{proj_id}, $P{pbl_id}, $P{seq_no});]]>
	</queryString>
	<field name="apply_order" class="java.lang.Integer"/>
	<field name="label" class="java.lang.String"/>
	<field name="amount" class="java.math.BigDecimal"/>
	<field name="vat" class="java.math.BigDecimal"/>
	<variable name="total" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{amount}]]></variableExpression>
	</variable>
	<variable name="availed_amount" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{apply_order} == 5 ? $F{amount}:new BigDecimal("0.00")]]></variableExpression>
		<initialValueExpression><![CDATA[]]></initialValueExpression>
	</variable>
	<variable name="cleared_ma" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{apply_order} == 6 ? $F{amount}:new BigDecimal("0.00")]]></variableExpression>
	</variable>
	<group name="grpTotal">
		<groupFooter>
			<band height="20">
				<line>
					<reportElement x="-15" y="0" width="250" height="1"/>
				</line>
				<textField>
					<reportElement x="0" y="5" width="130" height="15"/>
					<textElement verticalAlignment="Middle">
						<font fontName="Tahoma" size="8"/>
					</textElement>
					<textFieldExpression class="java.lang.String"><![CDATA["Outstanding Balance"]]></textFieldExpression>
				</textField>
				<textField pattern="#,##0.00" isBlankWhenNull="true">
					<reportElement x="130" y="5" width="90" height="15"/>
					<textElement textAlignment="Right" verticalAlignment="Middle">
						<font fontName="Tahoma" size="8"/>
					</textElement>
					<textFieldExpression class="java.math.BigDecimal"><![CDATA[$V{availed_amount}.subtract($V{cleared_ma})]]></textFieldExpression>
				</textField>
			</band>
		</groupFooter>
	</group>
	<detail>
		<band height="15" splitType="Stretch">
			<textField>
				<reportElement x="0" y="0" width="130" height="15"/>
				<textElement verticalAlignment="Middle">
					<font fontName="Tahoma" size="8"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{label}]]></textFieldExpression>
			</textField>
			<textField pattern="#,##0.00" isBlankWhenNull="true">
				<reportElement x="130" y="0" width="90" height="15">
					<printWhenExpression><![CDATA[$F{apply_order} != 2]]></printWhenExpression>
				</reportElement>
				<textElement textAlignment="Right" verticalAlignment="Middle">
					<font fontName="Tahoma" size="8"/>
				</textElement>
				<textFieldExpression class="java.math.BigDecimal"><![CDATA[$F{amount}]]></textFieldExpression>
			</textField>
			<textField pattern="" isBlankWhenNull="true">
				<reportElement x="130" y="0" width="90" height="15">
					<printWhenExpression><![CDATA[$F{apply_order} == 2]]></printWhenExpression>
				</reportElement>
				<textElement textAlignment="Right" verticalAlignment="Middle">
					<font fontName="Tahoma" size="8"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA[msg("{0}/{1}", new DecimalFormat("#,##0.00").format($F{vat}), new DecimalFormat("#,##0.00").format($F{amount}))]]></textFieldExpression>
			</textField>
		</band>
	</detail>
</jasperReport>
